{
  "openapi": "3.0.0",
  "info": {
    "title": "Fly Fishing API",
    "version": "1.0.0",
    "description": "API to track fly fishing catches and users with OAuth authentication"
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "Local server"
    }
  ],
  "paths": {
    "/auth/google": {
      "get": {
        "summary": "Login with Google",
        "responses": {
          "302": {
            "description": "Redirects to Google login"
          }
        }
      }
    },
    "/api/fish": {
      "get": {
        "summary": "Get all fish catches",
        "responses": {
          "200": {
            "description": "List of fish",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Fish" }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Add a new fish catch",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/Fish" }
            }
          }
        },
        "responses": {
          "201": { "description": "Fish created successfully" },
          "400": { "description": "Validation error" },
          "401": { "description": "Unauthorized" }
        }
      }
    },
    "/api/fish/{id}": {
      "get": {
        "summary": "Get a fish by ID",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": { "description": "Fish details", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Fish" } } } },
          "404": { "description": "Fish not found" }
        }
      },
      "put": {
        "summary": "Update a fish by ID",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/Fish" }
            }
          }
        },
        "responses": {
          "200": { "description": "Fish updated successfully" },
          "400": { "description": "Validation error" },
          "401": { "description": "Unauthorized" },
          "404": { "description": "Fish not found" }
        }
      },
      "delete": {
        "summary": "Delete a fish by ID",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": { "description": "Fish deleted successfully" },
          "401": { "description": "Unauthorized" },
          "404": { "description": "Fish not found" }
        }
      }
    },
    "/api/users": {
      "get": {
        "summary": "Get all users",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "List of users",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/User" }
                }
              }
            }
          },
          "401": { "description": "Unauthorized" }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Fish": {
        "type": "object",
        "required": ["species","river","weightOz","lengthIn","lureUsed","caughtBy"],
        "properties": {
          "species": { "type": "string", "example": "Rainbow Trout" },
          "river": { "type": "string", "example": "Provo River" },
          "weightOz": { "type": "number", "example": 12 },
          "lengthIn": { "type": "number", "example": 18 },
          "lureUsed": { "type": "string", "example": "Dry fly" },
          "catchDate": { "type": "string", "format": "date-time", "example": "2025-10-18T12:00:00Z" },
          "notes": { "type": "string", "example": "Beautiful sunny day" },
          "caughtBy": { "type": "string", "example": "user-id-here" }
        }
      },
      "User": {
        "type": "object",
        "required": ["username","email","oauthProvider","oauthId"],
        "properties": {
          "username": { "type": "string", "example": "John Doe" },
          "email": { "type": "string", "example": "john@example.com" },
          "oauthProvider": { "type": "string", "example": "google" },
          "oauthId": { "type": "string", "example": "1234567890" },
          "profilePic": { "type": "string", "example": "https://example.com/photo.jpg" },
          "joinDate": { "type": "string", "format": "date-time", "example": "2025-10-01T12:00:00Z" },
          "favoriteSpecies": { "type": "string", "example": "Rainbow Trout" }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
